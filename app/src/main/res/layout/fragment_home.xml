<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    tools:context=".HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingTop="30dp"
                    android:paddingRight="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:civ_border_color="#E1E1E1"
                            app:civ_border_width="3dp"
                            android:layout_margin="10dp"
                            android:elevation="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:fontFamily="@font/comfortaa"
                            android:text="How Hungry are you\nToday?"
                            android:textColor="#636363"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- ++++++++++++++++ Search bar +++++++++++++++++++++++++++++++-->
                    <LinearLayout
                        android:id="@+id/searchbarr"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:outlineAmbientShadowColor="#000000"
                        android:outlineSpotShadowColor="#000000"
                        android:background="@drawable/searchbar_background"
                        android:orientation="horizontal"
                        android:elevation="10dp"
                        android:paddingLeft="40dp"
                        android:paddingRight="15dp"
                        android:transitionName="search">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="0.6"
                            android:text="What's craving you today?"
                            android:textColor="#FFFFFF" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_search" />

                    </LinearLayout>
                    <!-- ++++++++++++++++ Search bar +++++++++++++++++++++++++++++++-->
                </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3C3C3C"
                android:fontFamily="@font/comfortaa"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Category"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:id="@+id/fastf"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/burger"/>
                        <TextView
                            android:id="@+id/headFast"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:transitionName="headFast"
                            android:fontFamily="@font/comfortaa"
                            android:textColor="#000000"
                            android:text="Fast Food"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:id="@+id/biryani"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/bir"/>
                        <TextView
                            android:id="@+id/headBir"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:transitionName="headBir"
                            android:fontFamily="@font/comfortaa"
                            android:textColor="#000000"
                            android:text="Biryani"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:id="@+id/pizza"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/pp"/>
                        <TextView
                            android:id="@+id/piz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:fontFamily="@font/comfortaa"
                            android:textColor="#000000"
                            android:transitionName="headPizza"
                            android:text="Pizza"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="15dp"
                    app:cardBackgroundColor="#FFFFFF">
                    <LinearLayout
                        android:id="@+id/chinese"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="55dp"
                            android:layout_height="50dp"
                            android:background="@drawable/momo"/>
                        <TextView
                            android:id="@+id/chi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:transitionName="headingName"
                            android:fontFamily="@font/comfortaa"
                            android:textColor="#000000"
                            android:text="Chinese"/>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#3C3C3C"
                android:fontFamily="@font/comfortaa"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="More Foods"/>

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/loading"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loading"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fList"
                android:layout_width="match_parent"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="60dp"/>


        </LinearLayout>
    </ScrollView>
</RelativeLayout>